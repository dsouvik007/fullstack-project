<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1>Login to Wonderlust</h1>
            <br /> <br />

            <body>
                <form method="POST" action="/login" class=" needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-username">username</label>
                        <input name="username" type="text" id="username" class="form-control" required>
                        <div class="invalid-feedback">username required</div>
                        <div class="valid-feedback">username looks good</div>
                    </div>

                    <!-- <div class="mb-3">
                        <label for="email" class="form-email">email</label>
                        <input name="email" type="email" class="form-control" required>
                        <div class="invalid-feedback">email required</div>
                    </div> -->

                    <div class="mb-3">
                        <label for="password" class="form-password">password</label>
                        <input name="password" type="password" class="form-control" required>
                        <div class="invalid-feedback">password required</div>
                        <div class="valid-feedback">password looks good</div>
                    </div>

                    <button btn btn-success>LogIn</button>
                </form>
            </body>
        </div>
    </div>