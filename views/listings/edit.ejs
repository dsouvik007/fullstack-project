<% layout("/layouts/boilerplate") -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <body>
                <h3><b>Edit listing</b></h3>
                <form method="POST" action="/listings/<%= listing.id %>?_method=PUT" novalidate
                    class=" needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-title">Title</label>
                        <input value="<%= listing.title %>" name="listing[title]" type="text" class="form-control">
                        <div class="invalid-feedback">title required</div>
                        <div class="valid-feedback">title looks good</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">description</label>
                        <textarea name="listing[description]" type="text" class="form-control"
                            required><%= listing.description %></textarea>
                        <div class="invalid-feedback">add a short description</div>
                    </div>

                    <div class="mb-3">
                        <img src="<%= originalImageUrl %>" />
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input value="<%= listing.image %>" name="listing[image]" class="form-control" type="file"
                            required>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input value="<%= listing.price %>" name="listing[price]" type="number" class="form-control"
                                required>
                            <div class="invalid-feedback">price reuired</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input value="<%= listing.country %>" name="listing[country]" type="text"
                                class="form-control" required>
                            <div class="invalid-feedback">country name-required</div>
                        </div>

                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input value="<%= listing.location %>" name="listing[location]" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">location required</div>
                    </div>

                    <button class="btn btn-dark btn-edit mt-3">Edit</button>
                </form>
            </body>

        </div>
    </div>