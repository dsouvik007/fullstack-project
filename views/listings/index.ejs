<% layout("/layouts/boilerplate") -%>
    <style>
       #filters{
          display: flex;
          flex-wrap: wrap;
          align-items: center;
       }

       .filter{
         text-align: center;
         margin-right: 2rem;
         margin-top: 2rem;
         opacity: 0.7;
       }

       .filter:hover{
        opacity: 1;
        cursor: pointer;
       }

       .tax-Info{
        display: none;
       }

       .toggle-switch{
        border: 1px solid black ;
        border-radius: 1rem;
        height: 3.5rem;
        padding: 1rem;
        padding-bottom: 2rem;
        display: flex;
        flex-wrap: wrap;
       }
    </style>
<div id="filters">
     <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>trending</p>
     </div>

     <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>mountain</p>
     </div>

     <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>swiming pool</p>
     </div>
     
     <div class="filter">
        <div><i class="fa-solid fa-city"></i></div>
        <p>famous cities</p>
     </div>

     <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>beaches</p>
     </div>

     <div class="filter">
        <div><i class="fa-solid fa-football"></i></div>
        <p>sports</p>
     </div>

     <div class="filter">
        <div><i class="fa-solid fa-square-parking"></i></div>
        <p>parking</p>
     </div>

     <div class="filter">
        <div><i class="fa-solid fa-sailboat"></i></div>
        <p>boats</p>
     </div>

     <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>bed rooms</p>
     </div>

     <div class="filter">
        <div><i class="fa-solid fa-warehouse"></i></div>
        <p>tree-house</p>
     </div>

     <div class="toggle-switch">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Total price after tax</label>
          </div>
     </div>

</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="link">
        <div class="card listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem;"
                alt="listings" />
            <div class="card-img-overlay"></div>
                <div class="card-body">
              <p class="card-text">
                <b>
                <%= listing.title %>
                </b> <br />
                </b>&#8377;<%= listing.price %> /night
                <i class="tax-Info">&nbsp; &nbsp; + 18% GST</i>
              </p>
            </div>
        </div>
                </a>

                <% } %>
</div>


